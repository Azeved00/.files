#shortcuts
alias reload='source ~/.bashrc'

alias mysql='mysql -u root -p'

alias nvim=nvim_cd
alias vim=nvim

alias ls='ls --colo=auto'
alias ll='ls -l'
alias ll='ls -la'

#navigation
alias ..='cd ../'
alias .='ls ./'
alias ...='cd ../../'

#git
alias ga='git add'
alias gs='git status'
alias gp='git push'
alias gf='git fetch && git pull && git status'
alias gc='git commit -m'
alias gsubmodule='git submodule sync && git submodule update --init --recursive'
