#bind r source-file ~/.config/tmux.conf \; display-message "RELOADING CONFIGURATION FILE…"
bind r source-file ~/Dev/dotfiles/home-manager/modules/cli/tmux/config \; display-message "RELOADING CONFIGURATION FILE…"

unbind C-b
set-option -g prefix C-w
bind-key C-w send-prefix

set -s escape-time 50 

# Styling
set-option -g status-position top
set-option -g status-justify centre

set -g status-right '#S @ #h'
set -g status-left '#I #W - #T'
set-option -g status-left-length 30
set-window-option -g window-status-current-format '%H:%M %d-%b-%y'
# Disable showing the default window list component.
set-window-option -g window-status-format ''

